{
  "compilerOptions": {
    "lib": ["es2015", "es2017", "dom"],
    "sourceMap": false,
    "noImplicitAny": false,
    "outDir": "./dist",
    "declaration": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es5"
  },
  "allowSyntheticDefaultImports": true,
  "esModuleInterop": true,
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "*/**/demo/*"
  ]
}
